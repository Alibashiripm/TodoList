@using TodoList.ViewModels.Account;
@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

  
<main class="client-page">
    <div class="container-content">

        <header style="color : #2ec4b6 "><h2> LOGIN </h2></header>

        <div class="form-layer">
            <form asp-controller="Account" asp-action="Login" asp-route-returnUrl="@ViewData["returnUrl"]" method="post">
                <div asp-validation-summary="ModelOnly"></div>

                @if (ViewData["ErrorMessage"] != null)
                {
                    <div class="text-danger">@ViewData["ErrorMessage"]</div>
                }

                <div class="input-group">
                    <span class="input-group-addon" id="email-address"><i class="zmdi zmdi-account"></i></span>


                    <input asp-for="UserName" class="form-control" />
                </div>

                <div class="input-group">
                    <span class="input-group-addon" id="password"><i class="zmdi zmdi-lock"></i></span>

                    <input asp-for="Password" type="password" class="form-control"/>
                   
                </div>

                <div class="form-group">
                    <label style="color:#f2f2f2" asp-for="RememberMe"></label>
                    <input asp-for="RememberMe" />
                    <span asp-validation-for="RememberMe"></span>
                </div>
                <div>
                    <button style="display:inline" type="submit" class="btn btn-success"> <i class="zmdi zmdi-account"></i> LOGIN</button>
                    <a href="/Register" type="submit" class="btn btn-primary"> <i class="zmdi zmdi-account"></i> REGISTER </a>
                  
                </div>
           
            </form>
 
        </div>

    </div>
</main>


@section Scripts
{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}